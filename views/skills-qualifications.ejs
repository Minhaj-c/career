<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Skills & Qualifications</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <style>
      @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap');
      
      :root {
        --primary-color: #2a3990;
        --secondary-color: #4e54c8;
        --accent-color: #ff6b6b;
        --background-color: #f8f9ff;
        --card-color: #ffffff;
        --text-color: #333344;
        --light-text: #7b7b8f;
        --shadow: 0 8px 30px rgba(0, 0, 0, 0.08);
        --hover-shadow: 0 15px 35px rgba(0, 0, 0, 0.12);
        --transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
      }

      * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }

      body {
        font-family: 'Poppins', sans-serif;
        background-color: var(--background-color);
        color: var(--text-color);
        min-height: 100vh;
        display: flex;
        flex-direction: column;
      }

      /* Header styles */
      header {
        background-color: var(--card-color);
        padding: 20px 30px;
        box-shadow: var(--shadow);
        text-align: center;
        margin-bottom: 40px;
      }

      header h1 {
        font-size: 28px;
        background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        position: relative;
        display: inline-block;
        margin: 0;
        padding-bottom: 10px;
      }

      header h1::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 50%;
        transform: translateX(-50%);
        width: 80px;
        height: 3px;
        background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
        border-radius: 2px;
      }

      /* Main content styles */
      main {
        max-width: 800px;
        margin: 0 auto;
        padding: 0 20px;
        flex-grow: 1;
      }

      .skills-card {
        background-color: var(--card-color);
        border-radius: 20px;
        padding: 30px;
        box-shadow: var(--shadow);
        margin-bottom: 30px;
        transition: var(--transition);
      }

      .skills-card:hover {
        box-shadow: var(--hover-shadow);
        transform: translateY(-5px);
      }

      .skill-item {
        margin-bottom: 25px;
      }

      .skill-item:last-child {
        margin-bottom: 0;
      }

      .skill-label {
        display: flex;
        align-items: center;
        gap: 15px;
        margin-bottom: 10px;
      }

      .skill-icon {
        width: 40px;
        height: 40px;
        background: linear-gradient(135deg, rgba(42, 57, 144, 0.1), rgba(78, 84, 200, 0.1));
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
      }

      .skill-icon i {
        color: var(--primary-color);
        font-size: 18px;
      }

      .skill-title {
        font-weight: 600;
        color: var(--primary-color);
        font-size: 18px;
      }

      .skill-content {
        background-color: #f5f6ff;
        border-radius: 12px;
        padding: 15px 20px;
        color: var(--text-color);
        line-height: 1.6;
      }

      .skill-tag {
        display: inline-block;
        background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
        color: white;
        padding: 5px 12px;
        border-radius: 20px;
        font-size: 14px;
        margin: 5px;
        box-shadow: 0 3px 8px rgba(42, 57, 144, 0.15);
      }

      .button-group {
        display: flex;
        gap: 15px;
        margin-top: 20px;
        justify-content: center;
      }

      .button {
        padding: 12px 25px;
        border-radius: 30px;
        font-family: 'Poppins', sans-serif;
        font-weight: 500;
        cursor: pointer;
        transition: var(--transition);
        font-size: 15px;
        border: none;
        display: flex;
        align-items: center;
        gap: 8px;
      }

      .primary-button {
        background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
        color: white;
        box-shadow: 0 4px 15px rgba(42, 57, 144, 0.2);
      }

      .primary-button:hover {
        transform: translateY(-3px);
        box-shadow: 0 7px 20px rgba(42, 57, 144, 0.3);
      }

      .secondary-button {
        background-color: transparent;
        border: 2px solid var(--primary-color);
        color: var(--primary-color);
      }

      .secondary-button:hover {
        background-color: rgba(42, 57, 144, 0.05);
        transform: translateY(-3px);
      }

      /* Empty state for skills */
      .empty-state {
        text-align: center;
        padding: 30px;
        color: var(--light-text);
      }

      .empty-state i {
        font-size: 40px;
        margin-bottom: 15px;
        color: var(--primary-color);
        opacity: 0.5;
      }

      /* Responsive design */
      @media (max-width: 768px) {
        header {
          padding: 15px;
        }
        
        header h1 {
          font-size: 24px;
        }
        
        .skills-card {
          padding: 20px;
        }
        
        .button-group {
          flex-direction: column;
        }
        
        .button {
          width: 100%;
          justify-content: center;
        }
      }
    </style>
  </head>
  <body>
    <header>
      <h1><%= user.username %>'s Skills & Qualifications</h1>
    </header>
    
    <main>
      <div class="skills-card">
        <div class="skill-item">
          <div class="skill-label">
            <div class="skill-icon">
              <i class="fas fa-graduation-cap"></i>
            </div>
            <div class="skill-title">Qualification</div>
          </div>
          <div class="skill-content">
            <%= user.qualification %>
          </div>
        </div>
      </div>
      
      <div class="skills-card">
        <div class="skill-item">
          <div class="skill-label">
            <div class="skill-icon">
              <i class="fas fa-tools"></i>
            </div>
            <div class="skill-title">Skills</div>
          </div>
          <div class="skill-content">
            <% if (user.skills && user.skills.length > 0) { %>
              <% user.skills.forEach(function(skill) { %>
                <span class="skill-tag"><%= skill %></span>
              <% }); %>
            <% } else { %>
              <div class="empty-state">
                <i class="fas fa-lightbulb"></i>
                <p>No skills added yet.</p>
              </div>
            <% } %>
          </div>
        </div>
      </div>
      
      <div class="skills-card">
        <div class="skill-item">
          <div class="skill-label">
            <div class="skill-icon">
              <i class="fas fa-star"></i>
            </div>
            <div class="skill-title">Interests</div>
          </div>
          <div class="skill-content">
            <% if (user.interests && user.interests.length > 0) { %>
              <% user.interests.forEach(function(interest) { %>
                <span class="skill-tag"><%= interest %></span>
              <% }); %>
            <% } else { %>
              <div class="empty-state">
                <i class="fas fa-compass"></i>
                <p>No interests added yet.</p>
              </div>
            <% } %>
          </div>
        </div>
      </div>
      
      <div class="skills-card">
        <div class="skill-item">
          <div class="skill-label">
            <div class="skill-icon">
              <i class="fas fa-heart"></i>
            </div>
            <div class="skill-title">Hobbies</div>
          </div>
          <div class="skill-content">
            <% if (user.hobbies && user.hobbies.length > 0) { %>
              <% user.hobbies.forEach(function(hobby) { %>
                <span class="skill-tag"><%= hobby %></span>
              <% }); %>
            <% } else { %>
              <div class="empty-state">
                <i class="fas fa-gamepad"></i>
                <p>No hobbies added yet.</p>
              </div>
            <% } %>
          </div>
        </div>
      </div>
      
      <div class="button-group">
        <button class="button primary-button" onclick="window.location.href='/edit-skills-qualifications/<%= user._id %>'">
          <i class="fas fa-edit"></i> Edit
        </button>
        
        <button class="button secondary-button" onclick="window.location.href='/dashboard/<%= user._id %>'">
          <i class="fas fa-arrow-left"></i> Go Back to Dashboard
        </button>
      </div>
    </main>
  </body>
</html>